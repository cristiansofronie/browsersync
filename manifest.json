{
  "manifest_version": 3,
  "name": "BrowserSync",
  "description": "Orchestrate multiple browser instances",
  "version": "1.3",
  "icons": {
    "16" : "icon16.png",
    "48" : "icon48.png",
    "128" : "icon128.png"
  },
  "action": {
    "icon": "icon.png",
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
